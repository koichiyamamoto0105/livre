<!DOCTYPE html>
<html>
  <head>
    <title>Livre</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

 <body>
  <header class="navbar navbar-fixed-top navbar-inverse">
   <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span>Bookers</span>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><a class="glyphicon glyphicon-home home" href="/"> Home</a></li>
          <li><a class="glyphicon glyphicon-link about" href="/home/about"> About</a></li>
          <li class=""> <%= link_to "Book", books_path %></li>
          <li class=""><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
      </ul>
    </nav>
   </div>
  </header>

  <% else %>
    <%= render 'books/list' %>
   <% end %>

    <%= yield %>
  </body>
</html>
